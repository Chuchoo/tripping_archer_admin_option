<% @page_title = "Admin Login" %>

  <%= form_tag 'attempt_login', :action => 'attempt_login',:class => "form-horizontal",:role => 'form' do %>

    <div class="form-group">
      <%= label_tag :username, nil, class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= text_field_tag :username, nil, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :password, nil, class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag 'Login', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>

